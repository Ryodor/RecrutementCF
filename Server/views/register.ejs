<!DOCTYPE html>
<html>

<head>
    <title>Resgister</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="/assets/css/bootstrap.min.css"></script>
    <script src="/assets/jquery.min.js"></script>
    <script src="/javascripts/registerForm.js"></script>
    <!-- <script src="/javascripts/main.js"></script> -->
    <link href="/stylesheets/registerForm.css" rel="stylesheet">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>

<body>
    <!------ Include the above in your HEAD tag ---------->

    <div class="title">
        <h1 class="fadeIn">F<span class="red-span">o</span>rmulaire <span class="thin-span">D'inscription</span></h1>
    </div>
    <div class="wrapper container">
        <!-- Sign up form -->
        <form id="formContent" class="fadeInDown">
            <!-- Sign up card -->
            <div class="card-body">
                <h2 id="who_message" class="active">Vos Informations</h2>
                <!-- First row (on medium screen) -->
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Prenom</label>
                        <input id="first_name" type="text" class="form-control" placeholder="Prenom">
                    </div>
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Nom</label>
                        <input id="last_name" type="text" class="form-control" placeholder="Nom de famille">
                    </div>
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Date de Naissance</label>
                        <input type="date" class="form-control" id="birthDate">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="example@gmail.com" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email_confirm" class="col-form-label">Confirmation d'email</label>
                        <input type="email_confirm" class="form-control" id="email_confirm" placeholder="example@gmail.com"
                            required>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Formation souhaitee</label>
                        <select id="formationNameSelect" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Cycle</label>
                        <select id="formationTypesSelect" class="form-control">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="col-form-label">Site</label>
                        <select id="formationCitiesSelect" class="form-control">
                        </select>
                    </div>
                </div>

                <h2 class="active">Langages maitrises</h2>

                <div class="form-group ">
                    <div id="langContainer" class="field-boxes quarter">
                    </div>
                </div>
                <div class="custom-btn-group">
                    <button id="valider" type="submit" class="form-button">Valider</button>
                </div>

            </div>
        </form>
    </div>
</body>

</html>